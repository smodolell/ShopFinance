<MudCard Outlined="true" Class="mt-2">
    <MudCardHeader>
        <CardHeaderContent>
            <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">

                <!-- Bloque Izquierdo -->
                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                    <MudIcon Icon="@Icon" Size="Size.Medium" Class="mr-2" />
                    <MudText Typo="Typo.h6">@Title</MudText>
                </MudStack>

                <!-- Bloque Derecho -->
                <MudToolBar Dense WrapContent="true" Class="py-1 px-0">
                    @if (ToolBarContent != null)
                    {
                        @ToolBarContent
                    }
                </MudToolBar>

            </MudStack>

            <!-- Descripción debajo del título -->
            @if (!string.IsNullOrWhiteSpace(Description))
            {
                <MudText Typo="Typo.body2" Color="Color.Secondary">@Description</MudText>
            }

            <MudDivider />
        </CardHeaderContent>
    </MudCardHeader>

    <MudCardContent>
        @if (ChildContent != null)
        {
            @ChildContent
        }
    </MudCardContent>
</MudCard>
@code {
    [Parameter] public string Title { get; set; } = "Sección";
    [Parameter] public string Description { get; set; } = "";
    [Parameter] public string Icon { get; set; } = Icons.Material.Filled.Info;
    [Parameter] public RenderFragment? ChildContent { get; set; }

    [Parameter] public RenderFragment? ToolBarContent { get; set; }
}