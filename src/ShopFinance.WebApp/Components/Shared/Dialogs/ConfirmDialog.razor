<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">@ContentText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small" Disabled="_isLoading" OnClick="Confirm">
            @if (_isLoading)
            {
                <MudProgressCircular Color="Color.Primary" Size="Size.Small" Indeterminate="true" />
            }
            else
            {
                @ButtonText
            }
        </MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Default" OnClick="Cancel" Size="Size.Small">Cancelar</MudButton>
    </DialogActions>
</MudDialog>