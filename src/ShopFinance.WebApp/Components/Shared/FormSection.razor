@namespace ShopFinance.WebApp.Components.Shared

<MudCard Outlined="true" Class="mt-2">
    <MudCardHeader>
        <CardHeaderContent>
            <MudStack Row="true">
                <MudStack Row="true" Justify="Justify.FlexStart" AlignItems="AlignItems.Center">
                    <MudIcon Icon="@Icons.Material.Filled.Info"></MudIcon>
                    <MudText Typo="Typo.h6">@Title</MudText>
                    <MudText Typo="Typo.body2">@Description</MudText>
                </MudStack>
                <MudSpacer></MudSpacer>
                <MudStack Row="true" Justify="Justify.FlexEnd" AlignItems="AlignItems.End">
                    <MudToolBar Dense WrapContent="true" Class="py-1 px-0">
                        @if (ToolBarContent != null)
                        {
                            @ToolBarContent
                        }
                    </MudToolBar>
                </MudStack>
            </MudStack>
        
            <MudDivider></MudDivider>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>

        @if (ChildContent != null)
        {
            @ChildContent
        }
    </MudCardContent>


</MudCard>


@code {
    [Parameter] public string Title { get; set; } = "Sección";
    [Parameter] public string Description { get; set; } = "";
    [Parameter] public RenderFragment? ChildContent { get; set; }

    [Parameter] public RenderFragment? ToolBarContent { get; set; }
}